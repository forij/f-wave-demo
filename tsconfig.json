{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "baseUrl": ".",
        "lib": [ /* Specify library files to be included in the compilation:  */
            "es2019",
            "dom"            
        ],
        "paths": {
            "@root/*": ["src/ts/*"],
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}